{
	"compilerOptions": {
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"types": ["node"],
		"baseUrl": "./src/",
		"paths": {
			"@/app/*": ["app/*"],
			"@/screens/*": ["screens/*"],
			"@/widgets/*": ["widgets/*"],
			"@/features/*": ["features/*"],
			"@/entities/*": ["entities/*"],
			"@/shared/*": ["shared/*"]
		}
	},
	"include": ["src", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
